<section>
  <div class="container bg-danger">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %> alert-dismissible fade show">
            <button type="button"  class="close" data-dismiss="alert" >&times;</button>
            <ul>
              <li>
                <%= value %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>